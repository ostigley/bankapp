= form_tag('/transactions/build_update', remote: true, 'data-id' => transaction.id, 'data-detail' => transaction.detail.parameterize) do
  %label
    Detail:
    - transaction.detail.split(',').each do |t|
      %p
        = t
  %Amount
  = transaction.amount
  %br
  = label_tag(:category, 'Select a category or create one')
  %br
  = select_tag(:category, category_detail_options, include_blank: 'Select a category', "data-id" => transaction.id)
  %br
  = label_tag(:new_category, 'New category')
  = text_field_tag(:new_category, nil, 'data-detail' => transaction.detail.parameterize)
  = submit_tag('Add New', class: 'submit', id: 'oliver')
%hr

